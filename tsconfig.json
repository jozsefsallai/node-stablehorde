    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./lib",
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"]
